       <nav class="navbar navbar-expand-lg navbar-light bg-light bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PinchOfPepper</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CreateArticle">Create Article</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Filter</a>
                                <div class="dropdown-menu">
                                    <form asp-controller="Home" asp-action="Filter" method="post">
                                        <input name="tag" placeholder="Tag" class="dropdown-item"/>
                                        <button type="submit" class="dropdown-item btn btn-success">Filter</button>
                                    </form>
                                </div>

                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
            <div class="d-flex">
                <div class="form-check form-switch ms-3">
                    <label class="form-check-label ms-3" for="lightSwitch">
